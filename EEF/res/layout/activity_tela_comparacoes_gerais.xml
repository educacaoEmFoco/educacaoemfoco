<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutVertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/background_sombra"
    android:gravity="left"
    android:orientation="vertical"
    android:padding="25dp" >

    <Button
        android:id="@+id/buttonEstados"
        android:layout_width="12dp"
        android:layout_height="wrap_content"
        android:onClick="clickBotaoComparacao"
        android:text="@string/botao_estado" >
    </Button>

    <Button
        android:id="@+id/buttonIndicativos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickBotaoIndicativos"
        android:text="@string/botao_indicativos" >
    </Button>

</LinearLayout>