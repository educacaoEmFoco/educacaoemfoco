<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/linearlayout_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearlayout_estado_sigla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_sigla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_vazia"
                style="@style/titulo" />

            <TextView
                android:id="@+id/textView_nome_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/string_vazia" 
                style="@style/titulo" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_populacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/populacao"
            style="@style/subTitulo" />

        <TextView
            android:id="@+id/textView_populacao_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />

        <TextView
            android:id="@+id/textView_participacao_estadual_pib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/participacao_PIB"
            style="@style/subTitulo"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_participacao_pib_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />

        <TextView
            android:id="@+id/textView_numero_projetos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/numero_projetos"
            style="@style/subTitulo"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_numero_projetos_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />

        <TextView
            android:id="@+id/textView_valor_investido_projetos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />

        <TextView
            android:id="@+id/textView_ideb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/participacao_IDEB"
            style="@style/subTitulo"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_ideb_fundamental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
           	style="@style/valor" />

        <TextView
            android:id="@+id/textView_ideb_ensinomedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />

        <TextView
            android:id="@+id/textView_ideb_iniciais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />

        <TextView
            android:id="@+id/textView_programa_primeiros_projetos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/Programa_primeiros_projetos"
            style="@style/subTitulo"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_primeiros_projetos_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />

        <TextView
            android:id="@+id/textView_programa_primeiros_projetos_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />

        <TextView
            android:id="@+id/textView_projetos_pesquisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/Projetos_pesquisa_CNPq"
           	style="@style/subTitulo"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_projetos_pesquisa_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />

        <TextView
            android:id="@+id/textView_valores_projeto_pesquisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />

        <TextView
            android:id="@+id/textView_jovens_pesquisadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/jovens_pesquisadores"
            style="@style/subTitulo"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_jovens_pesquisadores_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />

        <TextView
            android:id="@+id/textView_jovens_pesquisadores_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />

        <TextView
            android:id="@+id/textView_projetos_iniciacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/projeto_iniciacao"
           	style="@style/subTitulo"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_projetos_iniciacao_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />

        <TextView
            android:id="@+id/textView_projetos_iniciacao_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/string_vazia"
            style="@style/valor" />
    </LinearLayout>

</ScrollView>