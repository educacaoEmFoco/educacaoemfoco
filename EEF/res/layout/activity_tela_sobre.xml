<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearlayout_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/textView_participacaoPIB"
            style="@style/tituloSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/participacao_percentual_PIB" />
        
        <TextView
            android:id="@+id/textView_participacaoPIB_conteudo"
            style="@style/subTituloSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/participacao_percentual_PIB_conteudo" />

        <TextView
            android:id="@+id/textView_projetos_difusao"
            style="@style/tituloSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/projetos_difusao" />
        
          <TextView
            android:id="@+id/textView_projetos_difusao_conteudo"
            style="@style/subTituloSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/projetos_difusao_conteudo" />
 
          <TextView
            android:id="@+id/textView_ideb"
            style="@style/tituloSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/ideb" />
          
          <TextView
            android:id="@+id/textView_ideb_conteudo"
            style="@style/subTituloSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/ideb_conteudo" />
          
          <TextView
            android:id="@+id/textView_projetos_apoio_cnpq"
            style="@style/tituloSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/projetos_apoio_cnpq" />
          
          <TextView
            android:id="@+id/textView_projetos_apoio_cnpq_conteudo"
            style="@style/subTituloSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/projetos_apoio_cnpq_conteudo" />
          
          <TextView
            android:id="@+id/textView_projetos_jovens_pesquisadores"
            style="@style/tituloSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/projetos_jovens_pesquisadores" />
          
           <TextView
            android:id="@+id/textView_projetos_jovens_pesquisadores_conteudo"
            style="@style/subTituloSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/projetos_jovens_pesquisadores_conteudo" />
          
          <TextView
            android:id="@+id/textView_projetos_inct"
            style="@style/tituloSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/projetos_inct" />
          
           <TextView
            android:id="@+id/textView_projetos_inct_conteudo"
            style="@style/subTituloSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/projetos_inct_conteudo" />            
        
    </LinearLayout>
    

</ScrollView>

