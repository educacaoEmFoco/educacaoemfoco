<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TelaSobreComparacoesGerais" 
    android:background="@drawable/background">

    <TextView
            android:id="@+id/sobre_comparacoes_gerais_estados_title"
            style="@style/tituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_sobre_comparacacoes_gerais_estados"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/sobre_comparacoes_gerais_indicativos_title"
            style="@style/tituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sobre_comparacoes_gerais_conteudo_indicativos"
            android:layout_below="@+id/sobre_comparacoes_gerais_conteudo_estados"
            android:layout_marginTop="20dp"
            android:text="@string/title_sobre_comparacacoes_gerais_indicativos"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/sobre_comparacoes_gerais_conteudo_estados"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sobre_comparacoes_gerais_estados_title"
            android:layout_below="@+id/sobre_comparacoes_gerais_estados_title"
            android:layout_marginTop="22dp"
            android:text="@string/comparacoes_gerais_conteudo_estados"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/sobre_comparacoes_gerais_conteudo_indicativos"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sobre_comparacoes_gerais_conteudo_estados"
            android:layout_below="@+id/sobre_comparacoes_gerais_indicativos_title"
            android:layout_marginTop="24dp"
            android:text="@string/comparacoes_gerais_conteudo_indicativos"
            android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
