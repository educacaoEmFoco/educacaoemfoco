<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true" >

        <Button
            android:id="@+id/buttonEstados"
            style="@style/botaoMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/estado"
            android:onClick="clickButtonComparison" >
        </Button>

        <Button
            android:id="@+id/buttonIndicativos"
            style="@style/botaoMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/indicativos"
            android:onClick="clickButtonIndicatives" >
        </Button>
        
    </LinearLayout>

</RelativeLayout>
